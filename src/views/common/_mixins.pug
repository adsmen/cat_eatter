mixin list
    ul.eat__list
        +item('Сказочное заморское яство','Нямушка',' с фуа-гра','10 порций','мышь в подарок','fuagra', 'fuagraBtn')    
        +item('Сказочное заморское яство','Нямушка',' с рыбой','40 порций','2 мыши в подарок','fish', 'fishBtn')
        +item('Сказочное заморское яство','Нямушка',' с курой','100 порций','5 мышей в подарок','chicken', 'chickenBtn', true, 'заказчик доволен')


mixin item(title, nameTitle, nameSubTitle, eatCount , eatTitle, blockId, elementId, elementBtnId, isEatDesc, eatDesc)
    li.eat__item(id=`${blockId}`)
        .card
            .card__title #{title}
            .card__name
                span.card__name-title #{nameTitle} <br/>
                span.card__name-subtitle #{nameSubTitle}                                  
            .card__desc
                span #{eatCount} <br/>
                span #{eatTitle}              
                if isEatDesc
                    p #{eatDesc}                                                                                                                                                                                                                                                                                                                                                                                                                                      
            .card__logo
                img(src="./assets/images/cot.png", alt="" class="card__logo-img")
                .card__logo-size(id=`${elementId}`)

                //- img(src="./assets/images/sprite-05.png", alt="" class="card__logo-size" id=`${elementId}`)