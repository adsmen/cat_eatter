    ul.eat__list
        +item('Сказочное заморское яство','Нямушка',' с фуа-гра','10 порций','мышь в подарок','fuagra')    
        +item('Сказочное заморское яство','Нямушка',' с рыбой','40 порций','2 мыши в подарок','fish')
