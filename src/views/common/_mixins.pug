mixin item(title, nameTitle, nameSubTitle, eatCount , eatTitle, elementId, isEatDesc, eatDesc)
    li.eat__item
        .card(id=`${elementId}`)
            .card__title #{title}
            .card__name
                span.card__name-title #{nameTitle} <br/>
                span.card__name-subtitle #{nameSubTitle}                                  
            .card__desc
                span #{eatCount} <br/>
                span #{eatTitle}              
                if isEatDesc
                    <br/>
                    p #{eatDesc}                                                                                                                                                                                                                                                                                                                                                                                                                                      
            .card__logo
                img(src="./assets/images/cot.png", alt="" class="card__logo-img")
                img(src="./assets/images/by05.png", alt="" class="card__logo-size" id=`${elementId}`)